---
import SectionTitle from "../SectionTitle.astro";
import AcademicCap from "../Icons/AcademicCap.astro";

interface EducationEntry {
  degree: string;
  institution: string;
  date: string;
  highlights: string[];
}

const education: EducationEntry[] = [
  {
    degree: "PhD in Industrial Technologies",
    institution: "Universidad Rey Juan Carlos",
    date: "2018-2023",
    highlights: ["Cum Laude distinction", "Industrial PhD distinction"],
  },
  {
    degree: "Master in Energy and Fuels for the future",
    institution: "Universidad Autónoma de Madrid",
    date: "2016-2017",
    highlights: [],
  },
  {
    degree: "Bachelor's Degree in Energy Engineering",
    institution: "Universidad Politécnica de Madrid",
    date: "2010-2015",
    highlights: ["Bsc Thesis awarded with 'Honorable Mention'"],
  },
];
---

<section
  id="education"
  data-section="education"
  class="hidden print:block print:w-full print:px-0"
>
  <SectionTitle><AcademicCap class="size-7" />Education</SectionTitle>
  <div class="mx-auto sm:px-6 sm:border-l sm:border-blue-300/30">
    <div class="grid grid-cols-1 gap-y-8 items-baseline md:grid-cols-4">
      <h2 class="text-lg sm:text-xl text-gray-300 font-semibold tracking-tight">
        Academic path
      </h2>
      <div class="md:col-span-3">
        <ol class="w-full space-y-10">
          {
            education.map((entry) => (
              <li class="flex flex-col gap-3 break-inside-avoid">
                <div class="flex flex-row justify-between pl-2 border-l border-blue-300/30">
                  <div class="flex flex-col">
                    <h3 class="font-semibold tracking-tight sm:text-lg text-white/85">
                      {entry.institution}
                    </h3>
                    <h4 class="text-sm sm:text-base text-sky-300/80">
                      {entry.degree}
                    </h4>
                    <ul class="flex flex-wrap gap-2 py-1 text-xs text-blue-100/80">
                      {entry.highlights.map((highlight) => (
                        <li class="rounded border border-blue-300/40 px-2 py-1">
                          {highlight}
                        </li>
                      ))}
                    </ul>
                  </div>
                  <time class="text-sm text-blue-300/40">{entry.date}</time>
                </div>
              </li>
            ))
          }
        </ol>
      </div>
    </div>
  </div>
</section>
